<?xml version="1.0" encoding="UTF-8"?>
<wls:weblogic-application xmlns:wls="http://xmlns.oracle.com/weblogic/weblogic-application" 
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
						  					  http://java.sun.com/xml/ns/javaee/javaee_5.xsd 
						  					  http://xmlns.oracle.com/weblogic/weblogic-application
						  					  http://xmlns.oracle.com/weblogic/weblogic-application/1.4/weblogic-application.xsd">
	<wls:prefer-application-packages>
		<wls:package-name>kodo.persistence.*</wls:package-name>
		<wls:package-name>org.apache.commons.*</wls:package-name>
		<wls:package-name>org.apache.log4j.*</wls:package-name>
		<wls:package-name>org.apache.axis.*</wls:package-name>
		<wls:package-name>org.apache.openjpa.*</wls:package-name>
		<wls:package-name>org.eclipse.persistence.*</wls:package-name>
	</wls:prefer-application-packages>
	
	 <wls:application-param>
        <wls:param-name>webapp.encoding.default</wls:param-name>
        <wls:param-value>UTF-8</wls:param-value>
    </wls:application-param>
    <wls:application-param>
        <wls:param-name>webapp.encoding.usevmdefault</wls:param-name>
        <wls:param-value>false</wls:param-value>
    </wls:application-param>
    
    <wls:prefer-application-resources>
    	<resource-name>META-INF/services/com.sun.xml.ws.spi.db.BindingContextFactory</resource-name>
    	<resource-name>META-INF/services/javax.xml.bind.JAXBContext</resource-name>
    </wls:prefer-application-resources>
</wls:weblogic-application>